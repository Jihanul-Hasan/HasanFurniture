<AnchorPane id="AnchorPane" onMouseClicked="#checked" prefHeight="339.0" prefWidth="525.0" style="-fx-background-color: #EFEEFE;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hasanfurniture.AllUsersLoginController">
   <children>
      <ImageView fitHeight="341.0" fitWidth="263.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Photos/loginscenephoto1.jpg" />
         </image>
      </ImageView>
      <ImageView blendMode="COLOR_BURN" fitHeight="245.0" fitWidth="197.0" layoutX="283.0" layoutY="-56.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Photos/loginscenephoto2.jpg" />
         </image>
      </ImageView>
      <Button fx:id="loginbutton" layoutX="312.0" layoutY="239.0" mnemonicParsing="false" onAction="#loginonclick" prefHeight="34.0" prefWidth="141.0" style="-fx-background-color: #46379E;" text="Login" textFill="WHITE">
         <effect>
            <Glow level="0.19" />
         </effect></Button>
      <ComboBox fx:id="designationfx" layoutX="286.0" layoutY="167.0" onAction="#designationisselected" prefHeight="25.0" prefWidth="195.0" promptText="Designation" style="-fx-background-color: #FFFFFF;">
         <effect>
            <DropShadow color="#46379e" height="10.0" radius="4.5" width="10.0" />
         </effect>
      </ComboBox>
      <TextField fx:id="useremailfx" layoutX="284.0" layoutY="73.0" prefHeight="25.0" prefWidth="197.0" promptText="Enter email" style="-fx-background-color: #FFFFFF;">
         <effect>
            <DropShadow blurType="GAUSSIAN" color="#46379e" height="10.0" radius="4.5" width="10.0" />
         </effect></TextField>
      <PasswordField fx:id="userpasswordfx" layoutX="286.0" layoutY="120.0" prefHeight="25.0" prefWidth="195.0" promptText="Enter Password" style="-fx-background-color: #FFFFFF;">
         <effect>
            <DropShadow color="#46379e" height="10.0" radius="4.5" width="10.0" />
         </effect>
      </PasswordField>
      <CheckBox fx:id="remembermefx" layoutX="287.0" layoutY="210.0" mnemonicParsing="false" opacity="0.73" prefHeight="17.0" prefWidth="122.0" text="Rememeber me" textOverrun="CLIP">
         <effect>
            <Blend opacity="0.42" />
         </effect>
      </CheckBox>
      <Button layoutX="330.0" layoutY="301.0" mnemonicParsing="false" onAction="#forgotpassword" prefHeight="26.0" prefWidth="126.0" style="-fx-background-color: #EFEEFE;" text="Forgot Password?" textFill="#969191" underline="true" />
      <Label fx:id="wrongpassmsg" layoutX="320.0" layoutY="278.0" prefHeight="14.0" prefWidth="130.0" textFill="#ff0b0b">
         <font>
            <Font name="Eras Medium ITC" size="8.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
